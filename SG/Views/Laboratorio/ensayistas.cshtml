@model Entities.Laboratorio

@{
    ViewBag.Title = "ensayistas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Datatable -->
<link href="~/Content/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
<!-- Custom Stylesheet -->
@Html.BeginForm()
<div class="content-body">
    <div class="container-fluid">

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Usuarios del laboratiorio @Model.nombre</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 845px">
                            <thead>
                                <tr>

                                    <th>Laboratorio</th>
                                    <th>usuario</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @Html.HiddenFor(m => m.Id)
                                @foreach (var item in Model.usuarios)
                                {


                                    <tr>

                                        <td>@Model.nombre</td>
                                        <td>@item.UserName</td>

                                        <td>
                                            <div class="d-flex">
                                                @{string p = "/laboratorio/delete/" + Model.Id + "?Usuario=" + item.Id;}
                                                <a href="@p" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                    <input type="submit" value="Agregar" class="btn btn-outline-info" />
                    <input type="button" class="btn btn-outline-primary " style="float:right" value="Volver" onclick="location.href='@Url.Action("index", "laboratorio")'"/>
                </div>
            </div>
        </div>



    </div>
</div>
}
