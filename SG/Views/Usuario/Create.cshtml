@model Entities.Usuarios


@{Layout = " ~/Views/Shared/_Layout.cshtml";}








@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="content-body">


        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Crear un Usuario</h4>

                </div>

                <div class="card-body">
                    <div class="form-validation">
                        <form class="needs-validation">

                            <div class="row">


                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-xl-6">
                                    @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-lg-4 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @type = "email", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                        <br />
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-lg-4 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        <br />
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "col-lg-4 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @maxlength = "20", @minlength = "4", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                        <br />
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "col-lg-4 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control", @maxlenght = 30, @minlenght = 4 } })
                                        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                                        <br />
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-lg-4 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @maxlenght = 30, @minlenght = 4, @type = "password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        <br />
                                    </div>
                                </div>
                                <div class="col-xl-6">
                             Sector
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.unRol.name, new SelectList(ViewBag.sector), new { htmlAttributes = new { @class = "form-control wide" } })

                                   
                                        <br />
                                    </div>
                                </div>
                                <br />
                                <div class="mb-6 row">
                                    <div class="col-lg-8 ms-auto">
                                        <button type="submit" class="btn btn-primary">Crear</button>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



