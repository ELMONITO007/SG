@model Entities.OrdenTrabajo

@{
    ViewBag.Title = "Detales OE";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Datatable -->
<link href="~/Content/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
<!-- Custom Stylesheet -->

@using (Html.BeginForm("ensayar", "ordentrabajo", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="content-body">
        <!-- row -->
        <div class="container-fluid">
            <div class="d-flex align-items-center mb-4 flex-wrap">
                <h4 class="fs-20 font-w600  me-auto">Detalles de la Orden de ensayo N° @Model.Id</h4>

            </div>
            <div class="row">

                <div class="col-xl-9 col-xxl-8">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-header d-block">
                                    <h4 class="fs-20 d-block">Datos de la Orden: </h4>

                                </div>
                                <div class="card-body">
                                    <div class="form-validation">
                                        <form class="needs-validation" novalidate>
                                            <div class="row">
                                                <div class="col-xl-6">
                                                    <div class="mb-3 row">
                                                        <label class="col-lg-4 col-form-label" for="validationCustom01">
                                                            Fecha de creacion
                                                            <span class="text-danger"></span>
                                                        </label>
                                                        <div class="col-lg-6">

                                                            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                            <div class="invalid-feedback">
                                                                @Model.Fecha
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label class="col-lg-4 col-form-label" for="validationCustom02">
                                                            Laboratorio
                                                        </label>


                                                        <div class="col-lg-6">
                                                            @Html.EditorFor(model => model.Laboratorio.nombre, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label class="col-lg-4 col-form-label" for="validationCustom03">
                                                            Usuario

                                                        </label>
                                                        <div class="col-lg-6">
                                                            @Html.EditorFor(model => model.Usuario.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label class="col-lg-4 col-form-label" for="validationCustom03">
                                                            Transporte de envio a EETT

                                                        </label>
                                                        <div class="col-lg-6">
                                                            @Html.EditorFor(model => model.transporte, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                                                        </div>
                                                    </div>

                                                </div>
                                                <div class="col-xl-6">
                                                    <div class="mb-3 row">
                                                        <label class="col-lg-4 col-form-label" for="validationCustom04">
                                                            Cantidad De equipos
                                                        </label>
                                                        <div class="col-lg-6">
                                                            @Html.EditorFor(model => model.cantidadEquipos, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label class="col-lg-4 col-form-label" for="validationCustom04">
                                                            Transporte de envio a Laboratario
                                                        </label>
                                                        <div class="col-lg-6">

                                                            @Html.EditorFor(model => model.TransporteRecepcion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                        </div>
                                                    </div>
                                                    <div class="mb-3 row">
                                                        <label class="col-lg-4 col-form-label" for="validationCustom07">
                                                            Guia de envío a Laboratario

                                                        </label>
                                                        <div class="col-lg-6">
                                                            @Html.EditorFor(model => model.GuiaRecepcion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                        </div>
                                                    </div>

                                                    <div class="mb-3 row">
                                                        <label class="col-lg-4 col-form-label" for="validationCustom07">
                                                            Guia de envío a EETT

                                                        </label>
                                                        <div class="col-lg-6">
                                                            @Html.EditorFor(model => model.guia, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


                                                        </div>
                                                    </div>
                                                </div>
                                                <br />
                                                <hr>
                                                <h4 class="fs-20 mb-3">Observaciones</h4>
                                                @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                                                <br />

                                            </div>
                                        </form>
                                    </div>
                                    <hr>
                                    <h4 class="fs-20 mb-3">Archivos</h4>
                                    <br />
                                    <div class="row mb-3">

                                        @{string pagina = "/ordenTrabajo/download/" + Model.Id;
                                            string accept = "EnsayoN" + Model.Id + ".xls";}

                                        <label class="col-form-label text-right">Seleccione la precarga (Nombre @accept)</label>

                                        <div class="input-group mb-3">
                                            <button class="btn btn-primary btn-sm" type="submit">Subir</button>
                                            <div class="form-file">
                                                <input type="file" name="file" class="form-file-input form-control" accept=".xls" /> <br />
                                            </div>

                                            <a href="@pagina" class="btn btn-warning" style="margin-left:75px"><i class="fas fa-tools me-2 "></i>Descargar Excel</a>
                                        </div>





                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
 
}
