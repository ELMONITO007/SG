@model Entities.OrdenTrabajo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutTecnico.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="content-body">
        <div class="container-fluid">
            
            <!-- row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Crear una orden de Ensayo</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <form class="needs-validation" novalidate>
                                    <div class="row">
                                        <div class="col-xl-6">
                                            <div class="mb-3 row">
                                                <label class="col-lg-4 col-form-label" for="validationCustom01">
                                                    Fecha
                                                    <span class="text-danger"></span>
                                                </label>
                                                <div class="col-lg-6">

                                                    @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "validationCustom01" } })

                                                    
                                                </div>
                                            </div>
                                
                                            <div class="mb-3 row">
                                                <label class="col-lg-4 col-form-label" for="validationCustom03">
                                                    Usuario
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-lg-6">
                                                    @Html.EditorFor(model => model.Usuario.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @id = "validationCustom01" } })
                                                    @Html.HiddenFor(model => model.Usuario.Id)
                                                    @Html.HiddenFor(model => model.Estado)
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-xl-6">
                                            <div class="mb-3 row">
                                                <label class="col-lg-4 col-form-label" for="validationCustom04">
                                                    Cantidad De equipos <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-lg-6">
                                                    @Html.EditorFor(model => model.cantidadEquipos, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "1", @max = "1000" } })
                                                    @Html.ValidationMessageFor(model => model.cantidadEquipos, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        Ingrese solo numeros.
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label class="col-lg-4 col-form-label" for="validationCustom04">
                                                    Transportr <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-lg-6">

                                                    @Html.EditorFor(model => model.TransporteRecepcion, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Escriba el transporte", @maxlength = "50" } })
                                                    @Html.ValidationMessageFor(model => model.TransporteRecepcion, "", new { @class = "text-danger" })
                                                    <div class="invalid-feedback">
                                                        Ingrese solo letras
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label class="col-lg-4 col-form-label" for="validationCustom07">
                                                    Guia
                                                    <span class="text-danger">*</span>
                                                </label>
                                                <div class="col-lg-6">
                                                    @Html.EditorFor(model => model.GuiaRecepcion, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Escriba la guia", @maxlength = "50" } })
                                                    @Html.ValidationMessageFor(model => model.GuiaRecepcion, "", new { @class = "text-danger" })

                                                </div>
                                            </div>




                                        </div>
                                        <br />
                                        @Html.EditorFor(model => model.Observaciones, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Escriba cuales y cuantas herramientas se van a enviar", @maxlength = "150", @required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
                                        <br />
                                        <div class="mb-6 row">
                                            <div class="col-lg-8 ms-auto">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            
            </div>
        </div>
    </div>


}

