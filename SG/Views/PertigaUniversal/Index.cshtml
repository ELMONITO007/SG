                @Html.DisplayFor(modelItem => item.vencida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            
            
     @{string p = "/PertigaUniversal/details/" + item.Id;
        string a = "/PertigaUniversal/edit/" + item.Id;
         string d = "/PertigaUniversal/delete/" + item.Id; }
            <td>
                <a href="@p" class="btn btn-info shadow btn-xs sharp me-1"><i class="fas fa-info"></i></a>
                <a href="@a" class="btn btn-success shadow btn-xs sharp"><i class="fa fa-edit"></i></a>
                 <a href="@d" class="btn btn-danger shadow btn-xs sharp"><i class="fa bi-arrow-down"></i></a>
              
            </td>
        </tr>
        
    }
