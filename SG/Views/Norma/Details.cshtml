@model Entities.Norma


@{Layout = " ~/Views/Shared/_Layout.cshtml";}





<link href="~/Content/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="content-body">


        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Datos de la Norma @Model.codigoNorma</h4>

                </div>

                <div class="card-body">
                    <div class="form-validation">
                        <form class="needs-validation" novalidate>

                            <div class="row">

                                @Html.HiddenFor(model => model.Id)
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="col-xl-6">
                                    @Html.LabelFor(model => model.codigoNorma, htmlAttributes: new { @class = "col-lg-4 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.codigoNorma, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.codigoNorma, "", new { @class = "text-danger" })
                                        <br />
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "col-lg-4 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                                        <br />
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    @Html.LabelFor(model => model.protocolo, htmlAttributes: new { @class = "col-lg-4 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.protocolo, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.protocolo, "", new { @class = "text-danger" })
                                        <br />
                                    </div>
                                </div>

                                <div class="col-xl-6">
                                    @Html.LabelFor(model => model.pathFoto, htmlAttributes: new { @class = "col-lg-4 col-form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.pathFoto, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.pathFoto, "", new { @class = "text-danger" })
                                        <br />
                                    </div>
                                </div>

                                <br />
                                <div class="mb-6 row">
                                    <div class="col-lg-8 ms-auto">
                                        <button type="submit" class="btn btn-primary">Editar</button>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>

                <div class="card">

                    <div class="card-header">
                        <h4 class="card-title">Listado de Norma</h4>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>
                                            Nombre
                                        </th>



                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.listadoNormas)
                                    {

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.nombre)
                                            </td>



                                            @{

                                                string d = "/Norma/delete/" + item.Id; }
                                            <td>

                                                <a href="@d" class="btn btn-danger shadow btn-xs sharp"><i class="fa bi-arrow-down"></i></a>

                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <input type="button" class="btn btn-outline-primary " style="float:right;margin-right:15px" value="Crear" onclick="location.href='@Url.Action("create", "itemNorma", new { id=Model.Id})'" />
                </div>




            </div>
        </div>
    </div>

    <script src="~/Content/vendor/global/global.min.js"></script>
    <script src="~/Content/vendor/chart.js/Chart.bundle.min.js"></script>


    <script src="~/Content/vendor/jquery-nice-select/js/jquery.nice-select.min.js"></script>
    <!-- Apex Chart -->
    <script src="~/Content/vendor/apexchart/apexchart.js"></script>



    <script src="~/Content/vendor/chart.js/Chart.bundle.min.js"></script>
    <!-- Chart piety plugin files -->

    <script src="~/Content/vendor/peity/jquery.peity.min.js"></script>
    <!-- Dashboard 1 -->

    <script src="~/Content/js/dashboard/dashboard-1.js"></script>

    <script src="~/Content/vendor/owl-carousel/owl.carousel.js"></script>

    <script src="~/Content/js/custom.min.js"></script>

    <script src="~/Content/js/dlabnav-init.js"></script>
    <!-- Required vendors -->
    <script src="~/Content/vendor/global/global.min.js"></script>
    <script src="~/Content/vendor/chart.js/Chart.bundle.min.js"></script>
    <!-- Apex Chart -->
    <script src="~/Content/vendor/apexchart/apexchart.js"></script>

    <!-- Datatable -->
    <script src="~/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/js/plugins-init/datatables.init.js"></script>

    <script src="~/Content/vendor/jquery-nice-select/js/jquery.nice-select.min.js"></script>

    <script src="~/Content/js/custom.min.js"></script>


}


