@model IEnumerable<Entities.TipoHerramienta>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Datatable -->
<link href="~/Content/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
<!-- Custom Stylesheet -->
<div class="content-body">
    <div class="container-fluid">

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Herramientas</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th>Tipo</th>
                                    <th>Categoria</th>
                                    <th>Ensayo</th>
                                    <th>Uso</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    string l = item.tipoHerramienta.Replace(" ", "");

                                    <tr>

                                        <td>@item.tipoHerramienta</td>
                                        <td>@item.subTipo</td>
                                        <td>@item.tipoEnsayo</td>

                                        <td>@item.tipoUso</td>

                                        <td>
                                            <div class="d-flex">
                                                @{string p = "/tipoherramienta/details/" + item.Id;
                                                    string a = "/" + l + "/index"; }
                                                <a href="@p" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-info"></i></a>
                                                <a href="@a" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-tools"></i></a>
                                            </div>
                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <input type="button" class="btn btn-outline-primary " style="float:right;margin-right:15px" value="Crear" onclick="location.href='@Url.Action("create", "TipoHerramienta")'" />

            </div>
        </div>



    </div>
</div>
